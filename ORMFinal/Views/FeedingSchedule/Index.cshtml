@model IEnumerable<FeedingSchedule>

@{
    ViewData["Title"] = "Feeding Schedule";
}

<h2 class="display-1 text-center my-4">Feeding Schedule</h2>

<div class="text-center my-4">
    <a class="btn btn-primary active btn-lg my-4" href="@Url.Action("Create")"><i class="fa fa-plus me-2"></i>Create feeding schedule</a>
</div>

<table class="table table-sm table-responsive table-hover">
    <thead>
        <tr>
            <th>Feeding Schedule ID</th>
            <th>Animal ID</th>
            <th>Morning feeding</th>
            <th>Noon feeding</th>
            <th>Evening feeding</th>
            <th>Night feeding</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var FeedingSchedule in Model)
        {
            <tr>
                <td>@FeedingSchedule.FeedingScheduleId</td>
                <td>@FeedingSchedule.AnimalId</td>
                <td>@FeedingSchedule.MorningFeeding</td>
                <td>@FeedingSchedule.NoonFeeding</td>
                <td>@FeedingSchedule.EveningFeeding</td>
                <td>@FeedingSchedule.NightFeeding</td>
                <td class="text-center btn-group">
