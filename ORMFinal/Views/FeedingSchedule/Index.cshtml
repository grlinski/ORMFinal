 *@                <form asp-action="Delete" asp-controller="FeedingSchedule" method="post">
                    <input type="hidden" name="id" value="@FeedingSchedule.FeedingScheduleId" />
                        <button type="submit" class="btn btn-danger rounded-pill shadow d-flex align-items-center"><i class="fa fa-trash me-2"></i>Delete</button>
                </form>
                </td>
            </tr>
        }
    </tbody>
